load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "env.go",
        "hosts.go",
        "hosts_unix.go",
        "ip.go",
        "opts.go",
        "opts_unix.go",
        "quotedstring.go",
        "runtime.go",
        "ulimit.go",
    ] + select({
        "@io_bazel_rules_go//go/platform:windows_amd64": [
            "hosts_windows.go",
            "opts_windows.go",
