load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "url_go18.go",
        "url_non_go18.go",
    ] + select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "osxkeychain_darwin.c",
            "osxkeychain_darwin.go",
            "osxkeychain_darwin.h",
        ],
        "//conditions:default": [],
    }),
    cgo = True,
    clinkopts = select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "-framework Security -framework Foundation -mmacosx-version-min=10.10",
        ],
        "//conditions:default": [],
    }),
    copts = select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "-x objective-c -mmacosx-version-min=10.10",
        ],
        "//conditions:default": [],
    }),
    importpath = "github.com/docker/docker-credential-helpers/osxkeychain",
    visibility = ["//visibility:public"],
    deps = select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "//vendor/github.com/docker/docker-credential-helpers/credentials:go_default_library",
        ],
        "//conditions:default": [],
    }),
)

go_test(
    name = "go_default_test",
    srcs = select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "osxkeychain_darwin_test.go",
        ],
        "//conditions:default": [],
    }),
    embed = [":go_default_library"],
    importpath = "github.com/docker/docker-credential-helpers/osxkeychain",
    deps = select({
        "@io_bazel_rules_go//go/platform:darwin": [
            "//vendor/github.com/docker/docker-credential-helpers/credentials:go_default_library",
        ],
        "//conditions:default": [],
    }),
)
